<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xkbConfigRegistry SYSTEM "xkb.dtd">
<xkbConfigRegistry version="1.1">
  <layoutList>
    <!-- Другие твои раскладки (удалять не нужно) -->
    <!-- ..................... -->

    <!-- В самом конце списка layoutList добавь кастомные раскладки - myus, myru -->

    <layout>
      <configItem>
        <name>myus</name>
        <shortDescription>EN</shortDescription>
        <description>English (custom AltGr)</description>
        <languageList>
          <iso639Id>eng</iso639Id>
        </languageList>
      </configItem>
    </layout>

    <layout>
      <configItem>
        <name>myru</name>
        <shortDescription>RU</shortDescription>
        <description>Russian (custom AltGr)</description>
        <languageList>
          <iso639Id>rus</iso639Id>
        </languageList>
      </configItem>
    </layout>
  </layoutList>

</xkbConfigRegistry>